@model ControleDeGastos.Models.Gastos
@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>
<div class="form-group">
    <form action="/Gastos/Update/" method="post">
        <div class="form-group">
            <label>Id</label>
            <input class="form-control" type="text" disabled name="IdTipo" value="@Model.IdTipo" />
        </div>
        <div class="form-group">
            <label>Nome</label>
            <input class="form-control" type="text" name="Nome" value="@Model.Nome"/>
        </div>
        <button type="submit" class="btn btn-success">Confirmar</button>
    </form>
</div>